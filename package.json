{
  "name": "gitscribe",
  "version": "0.2.0",
  "description": "An automated GitLab progress reporter with burndown chart generation",
  "main": "lib/index.js",
  "bin": {
    "gitscribe": "./lib/cli.js"
  },
  "scripts": {
    "lint-javascript": "xo",
    "lint-shell": "shellcheck $(find . -type f -name '*.sh' -not -path './node_modules/*' -not -path './.git/*') $(find ./ci/hooks -type f)",
    "test": "ava",
    "coverage": "nyc ava -t",
    "check-duplicate-code": "jsinspect -t 20 src"
  },
  "author": "Alex Gustafsson",
  "license": "ISC",
  "devDependencies": {
    "ava": "^3.5.0",
    "husky": "^4.2.3",
    "jsinspect": "^0.12.7",
    "nyc": "^15.0.0",
    "xo": "^0.28.0"
  },
  "dependencies": {
    "chart.js": "^2.9.3",
    "chartjs-node-canvas": "^3.0.6",
    "commander": "^5.0.0",
    "debug": "^4.1.1",
    "gitlab": "^14.2.2"
  },
  "xo": {
    "space": 2,
    "esnext": true,
    "rules": {
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "error"
        }
      ],
      "dot-notation": [
        "off"
      ],
      "quote-props": [
        "off"
      ],
      "object-curly-spacing": [
        "off"
      ],
      "no-new": [
        "off"
      ],
      "padding-line-between-statements": [
        "off"
      ]
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "concurrency": 5,
    "failFast": false,
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "./ci/hooks/pre-commit",
      "commit-msg": "./ci/hooks/commit-msg"
    }
  }
}
